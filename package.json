{
  "name": "tabd",
  "displayName": "Tab'd",
  "description": "Tracking for AI-assisted and copy-paste supported code editing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tabd.toggleBlame",
        "title": "Tab'd: Toggle Blame"
      }
    ],
    "configuration": {
      "title": "Tab'd",
      "properties": {
        "tabd.showBlameByDefault": {
          "type": "boolean",
          "default": false,
          "description": "Always show blame in the editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "vscode-position-tracking": "^0.1.0",
    "vscode-uri": "^3.1.0"
  }
}
