{
  "name": "tabd",
  "displayName": "Tab'd",
  "description": "Tracking for AI-assisted and copy-paste supported code editing",
  "keywords": [
    "tabd",
    "ai",
    "generative",
    "copilot",
    "github copilot",
    "cursor",
    "windsurf",
    "kiro",
    "tab completion",
    "code completion",
    "Stack Overflow"
  ],
  "icon": "assets/tabd_logo.png",
  "license": "AGPL-3.0-only",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iann0036/tabd"
  },
  "galleryBanner": {
    "theme": "light"
  },
  "pricing": "Free",
  "sponsor": {
    "url": "https://github.com/sponsors/iann0036"
  },
  "homepage": "https://github.com/iann0036/tabd#readme",
  "publisher": "iann0036",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tabd.toggleBlame",
        "title": "Tab'd: Toggle Blame"
      },
      {
        "command": "tabd.toggleEnabled",
        "title": "Tab'd: Toggle Enabled"
      },
      {
        "command": "tabd.clearDataFile",
        "title": "Tab'd: Clear tracking data for the current file"
      },
      {
        "command": "tabd.clearDataWorkspace",
        "title": "Tab'd: Clear tracking data for the current workspace or repository"
      },
      {
        "command": "tabd.installNativeHost",
        "title": "Tab'd: Install browser helper"
      }
    ],
    "configuration": {
      "title": "Tab'd",
      "properties": {
        "tabd.showBlame": {
          "type": "boolean",
          "default": false,
          "description": "Always show blame in the editor"
        },
        "tabd.disabled": {
          "type": "boolean",
          "default": false,
          "description": "Disable all Tab'd features"
        },
        "tabd.enableIDEClipboardMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Track clipboard copies from the IDE (e.g. Ctrl+C, Cmd+C)"
        },
        "tabd.storage": {
          "type": "string",
          "enum": [
            "homeDirectory",
            "repository",
            "gitNotes"
          ],
          "enumDescriptions": [
            "Store data in your home directory",
            "Store data in the repository",
            "Store data in git notes"
          ],
          "default": "homeDirectory",
          "description": "Choose where to store Tab'd data"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cp -rf ./assets/ out/assets/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vscode/tree-sitter-wasm": "^0.1.4",
    "async-mutex": "^0.5.0",
    "tree-sitter-javascript": "^0.23.1",
    "vscode-uri": "^3.1.0",
    "web-tree-sitter": "^0.25.8"
  }
}
